modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Network Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "network_monitor_app"

[[workflows.workflow]]
name = "Network Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install psutil matplotlib tkinter && python main.py"

[[workflows.workflow]]
name = "network_monitor_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install psutil matplotlib tkinter && python main.py"

[deployment]
run = ["sh", "-c", "pip install psutil matplotlib tkinter && python main.py"]
